<hr>
<% if @firm.shareholders.any? %>
  <h3>Liste des nouveaux actionnaires</h3>
  <table class="table table-hover">
    <th>Prénom</th>
    <th>Nom</th>
    <th>Adresse</th>
    <th>Date de naissance</th>
    <th>Nationalité</th>
    <th></th>
  <% @firm.shareholders.each do |shareholder| %>
    <% if (@round.initial_round && shareholder.initial_investor) || (!@round.initial_round && !shareholder.initial_investor) %>
        <tr>
          <td><%=shareholder.first_name%></td>
          <td><%=shareholder.last_name%></td>
          <td><%=shareholder.address%></td>
          <td><%=shareholder.birth_date%></td>
          <td><%=shareholder.nationality%></td>
          <td><%= link_to 'Delete shareholder', delete_shareholder_path(@firm, @round.id, shareholder), method: 'delete', remote: true %></td>
        </tr>
    <% end %>
  <%end%>
  </table>

  <%= button_to 'Définir la répartition du capital entre actionnaires', ownership_path(@firm, @round.id), method: 'get', class: "btn btn-primary add-ownership-button" %>
<% end %>