<% if @round.initial_round %>
  <h1>Ajouter les actionnaires initiaux de la société <%=@firm.name%></h1>

  <div class="row bs-wizard" style="border-bottom:0;">
    <div class="col-xs-3 bs-wizard-step complete col-xs-offset-1">
      <div class="text-center bs-wizard-stepnum">Step 1</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center">Ajouter une nouvelle société</div>
    </div>

    <div class="col-xs-3 bs-wizard-step active"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Step 2</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center"><strong>Ajouter les actionnaires initiaux</strong></div>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Step 3</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center">Ajouter les nouveaux actionnaires</div>
    </div>
  </div>

<% else %>
  <h1>Ajouter un nouvel actionnaire</h1>

    <div class="row bs-wizard" style="border-bottom:0;">
    <div class="col-xs-3 bs-wizard-step complete col-xs-offset-1">
      <div class="text-center bs-wizard-stepnum">Step 1</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center">Ajouter une nouvelle société</div>
    </div>

    <div class="col-xs-3 bs-wizard-step complete"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Step 2</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center">Ajouter les actionnaires initiaux</div>
    </div>

    <div class="col-xs-3 bs-wizard-step active"><!-- complete -->
      <div class="text-center bs-wizard-stepnum">Step 3</div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
      <div class="bs-wizard-info text-center"><strong>Ajouter les nouveaux actionnaires</strong></div>
    </div>
    </div>
<% end %>
  <hr>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <div id="new-shareholder">
        <%= render 'new_shareholder' %>
    </div>
  </div>
  <div class="col-sm-4 ">
    <div id="shareholders">
      <%= render 'show_shareholders' %>
    </div>
  </div>
</div>
