<!DOCTYPE html>
<html>
  <head>
    <title>Capy</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <div class="container">
      <% flash.each do |name, msg| %>
        <% msg.each do |alert_msg| %>
          <div class ="alert alert-<%=name%>"><%= content_tag :div, alert_msg %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>